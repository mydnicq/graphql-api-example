{
  "name": "graphql-api-example",
  "version": "0.0.1",
  "description": "GraphQL API server (example)",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "prebuild": "npm run clean; mkdir -p ./dist",
    "build": "babel ./src --out-dir ./dist --copy-files",
    "prestart": "npm run build",
    "start": "node ./dist",
    "watch": "nodemon -e js,graphql --exec npm run start"
  },
  "keywords": [
    "graphql",
    "api",
    "koa",
    "apollo-server"
  ],
  "author": "Tadej Stanic",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-preset-node6": "^11.0.0"
  },
  "dependencies": {
    "apollo-server": "^0.3.2",
    "contextable": "^0.3.2",
    "glob": "^7.1.1",
    "graphql": "^0.7.2",
    "graphql-tools": "^0.7.2",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-router": "^7.0.1",
    "mongodb": "^2.2.10"
  }
}
